@model AlugaOffice.Models.Categoria
@{
    ViewData["Title"] = "Atualizar";
}
<h2>Atualizar</h2>
<hr />
<form method="post">
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control">
                <span class="text-danger" asp-validation-for="Nome"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="Slug">Slug</label>
                <input asp-for="Slug" class="form-control">
                <span class="text-danger" asp-validation-for="Slug"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="CategoriaPaiId">Categoria Pai</label>
                <select asp-for="CategoriaPaiId" class="form-control" asp-items="@ViewBag.Categorias">
                    <option value="">Selecione</option>
                </select>
                <span class="text-danger" asp-validation-for="CategoriaPaiId"></span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Atualizar</button>
    <button asp-action="Index" class="btn btn-info">Voltar</button>
</form>