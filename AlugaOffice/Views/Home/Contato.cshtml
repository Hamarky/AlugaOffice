
@{
    ViewData["Title"] = "Contato";
    AlugaOffice.Models.Contato contato = (AlugaOffice.Models.Contato)ViewData["CONTATO"];

}
<main role="main" style="margin-top: 50px">

    <br />
    <br />
    <div class="container">
        <div class="row">

            <aside class="col-sm-6 center">
                <header class="card-header center">
                    <h4 class="card-title mt-2" style="position: center">Contato</h4>
                </header>
                <div>
                    <article class="card">
                        <div class="card-body p-5">
                            @if (ViewData["MSG_S"] != null)
                            {
                                <p class="alert alert-success">@ViewData["MSG_S"]</p>
                            }

                            @if (ViewData["MSG_E"] != null)
                            {
                                <p class="alert alert-danger">@Html.Raw(ViewData["MSG_E"])</p>
                            }

                            <form role="form" method="post" action="/Home/ContatoAcao">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="nome">Nome</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                                        </div>
                                        <input type="text" id="nome" class="form-control" name="nome" placeholder=""
                                               required="" value="@(contato != null ? contato.Nome : "")">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="email">E-mail</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-at"></i></span>
                                        </div>
                                        <input type="text" class="form-control" name="email" id="email" placeholder="" value="@(contato != null ? contato.Email : "")">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="texto"><span class="hidden-xs">Texto</span> </label>
                                            <div class="form-inline">
                                                <textarea class="form-control" name="texto" id="texto" style="width:100%">@(contato != null ? contato.Texto : "")</textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button class="subscribe btn btn-primary btn-block" type="submit"> Enviar </button>
                            </form>
                        </div>
                    </article>
                </div>
            </aside>
        </div>
    </div>
</main>
